---
/**
 * AppLayout - Main layout template
 * Provides consistent structure across all pages:
 * - Sidebar navigation (desktop)
 * - Header with mobile menu
 * - Main content area
 */

import Sidebar from './Sidebar.astro';
import Header from './Header.astro';
import '../../styles/global.css';

export interface Props {
  title: string;
  currentSection?: 'home' | 'soundboard' | 'quiz' | 'games' | 'reference';
}

const { title, currentSection = 'home' } = Astro.props;
const fullTitle = `${title} | Pinyin Chart`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Learn Mandarin Chinese pinyin through interactive soundboards and quizzes. Master tones, initials, finals, and pronunciation." />

    <title>{fullTitle}</title>

    <link rel="icon" type="image/svg+xml" href="/pinyin-chart/favicon.svg" />

    <!-- Preload fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />

    <!-- Register Service Worker -->
    <script>
      // Register service worker for audio caching
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', async () => {
          try {
            const { registerServiceWorker } = await import('/src/lib/audio/registerSW.ts');
            await registerServiceWorker();
          } catch (error) {
            console.error('Failed to register service worker:', error);
          }
        });
      }
    </script>
  </head>

  <body>
    <div class="app-container">
      <!-- Desktop Sidebar -->
      <aside class="desktop-sidebar" id="desktop-sidebar">
        <button class="sidebar-collapse-btn" id="sidebar-collapse-btn" aria-label="Collapse sidebar">
          <svg class="collapse-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M15 18l-6-6 6-6" />
          </svg>
        </button>
        <Sidebar currentSection={currentSection} />
      </aside>

      <!-- Main Content Area -->
      <div class="main-wrapper" id="main-wrapper">
        <!-- Mobile Header -->
        <Header title={title} currentSection={currentSection} />

        <!-- Page Content -->
        <main class="page-content">
          <slot />
        </main>
      </div>
    </div>

    <script>
      // Sidebar collapse functionality
      const sidebar = document.getElementById('desktop-sidebar');
      const mainWrapper = document.getElementById('main-wrapper');
      const collapseBtn = document.getElementById('sidebar-collapse-btn');

      // Check localStorage for saved state
      const isCollapsed = localStorage.getItem('sidebar-collapsed') === 'true';
      if (isCollapsed) {
        sidebar?.classList.add('collapsed');
        mainWrapper?.classList.add('sidebar-collapsed');
      }

      collapseBtn?.addEventListener('click', () => {
        const willCollapse = !sidebar?.classList.contains('collapsed');
        sidebar?.classList.toggle('collapsed');
        mainWrapper?.classList.toggle('sidebar-collapsed');
        localStorage.setItem('sidebar-collapsed', String(willCollapse));
      });
    </script>

    <style>
      .app-container {
        display: flex;
        min-height: 100vh;
      }

      /* Desktop Sidebar */
      .desktop-sidebar {
        position: fixed;
        left: 0;
        top: 0;
        bottom: 0;
        width: var(--sidebar-width);
        background-color: var(--color-surface);
        border-right: 1px solid var(--color-border);
        overflow-y: auto;
        display: none;
        transition: width 0.2s ease, transform 0.2s ease;
      }

      @media (min-width: 768px) {
        .desktop-sidebar {
          display: block;
        }
      }

      /* Collapse button */
      .sidebar-collapse-btn {
        position: absolute;
        top: 50%;
        right: -12px;
        transform: translateY(-50%);
        width: 24px;
        height: 24px;
        border-radius: 50%;
        background: var(--color-surface);
        border: 1px solid var(--color-border);
        cursor: pointer;
        display: none;
        align-items: center;
        justify-content: center;
        padding: 0;
        z-index: 10;
        transition: background-color 0.15s ease, transform 0.2s ease;
      }

      .sidebar-collapse-btn:hover {
        background-color: var(--color-border-light);
      }

      @media (min-width: 768px) {
        .sidebar-collapse-btn {
          display: flex;
        }
      }

      .collapse-icon {
        width: 14px;
        height: 14px;
        color: var(--color-text-secondary);
        transition: transform 0.2s ease;
      }

      /* Collapsed state */
      .desktop-sidebar.collapsed {
        width: 0;
        overflow: hidden;
        border-right: none;
      }

      .desktop-sidebar.collapsed .sidebar-collapse-btn {
        right: -36px;
      }

      .desktop-sidebar.collapsed .collapse-icon {
        transform: rotate(180deg);
      }

      /* Main Content Wrapper */
      .main-wrapper {
        flex: 1;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        transition: margin-left 0.2s ease;
      }

      @media (min-width: 768px) {
        .main-wrapper {
          margin-left: var(--sidebar-width);
        }

        .main-wrapper.sidebar-collapsed {
          margin-left: 0;
        }
      }

      /* Page Content */
      .page-content {
        flex: 1;
        padding: var(--spacing-lg);
        max-width: var(--max-content-width);
        width: 100%;
        margin: 0 auto;
      }

      @media (min-width: 768px) {
        .page-content {
          padding: var(--spacing-2xl);
        }
      }

    </style>
  </body>
</html>
