---
/**
 * Soundboard Page - Interactive Pinyin Chart
 *
 * Features:
 * - Pivot table layout (initials Ã— finals)
 * - Sticky tone selector with keyboard shortcuts (1-5)
 * - Click syllables to hear audio
 * - Row/column highlighting on hover
 */

import AppLayout from '../components/layout/AppLayout.astro';
import SoundboardContainer from '../components/soundboard/SoundboardContainer';
import '../styles/soundboard.css';

const title = 'Pinyin Soundboard';
const description = 'Interactive pinyin chart with audio. Click any syllable to hear its pronunciation. Use keyboard shortcuts 1-5 to switch tones.';
---

<AppLayout title={title} currentSection="soundboard">
  <div class="soundboard-page">
    <div class="soundboard-content">
      <SoundboardContainer client:load />
    </div>
  </div>

  <style>
    .soundboard-page {
      width: 100%;
      height: 100%;
      display: flex;
      flex-direction: column;
    }

    .soundboard-content {
      flex: 1;
      overflow: hidden;
      display: flex;
      flex-direction: column;
    }
  </style>
</AppLayout>
